{
  "title": "Change caps_lock to Esc and delete",
  "rules": [
	{
	  "description": "Post delete if Caps is tapped, Control if held.",
	  "manipulators": [
        {
    "type": "basic",
    "from": {
        "key_code": "left_control",
        "modifiers": {
            "optional": [
                "any"
            ]
        }
    },
    "to": [
        {
            "key_code": "left_control",
            "lazy": true
        }
    ],
    "to_if_alone": [
        {
            "key_code": "delete_or_backspace"
        }
    ]
}
	  ]
	}
  ]
}
